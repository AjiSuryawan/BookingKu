<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent" xmlns:tools="http://schemas.android.com/tools"
        android:orientation="vertical"
        android:padding="10dp"
        android:background="#fcfcfc"
        android:gravity="center"
        android:id="@+id/ll">

    <android.support.v7.widget.CardView
            android:id="@+id/cardkuspa1"
            android:layout_margin="20dp"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:layout_marginBottom="1dp">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

            <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <ImageView
                        android:src="@drawable/spa1"
                        android:id="@+id/articleImage"
                        android:layout_width="match_parent"
                        android:layout_height="250dp"
                        android:adjustViewBounds="false"
                        android:background="@color/darkGray"
                        android:cropToPadding="true"
                        android:padding="0dp"
                        android:paddingBottom="0dp"
                        android:scaleType="centerCrop" />

                <TextView
                        android:id="@+id/articleName"
                        style="@android:style/TextAppearance.Medium"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignBottom="@+id/articleImage"
                        android:layout_alignParentStart="true"
                        android:background="@drawable/gradient_title"
                        android:elevation="3dp"
                        android:ellipsize="marquee"
                        android:focusable="true"
                        android:marqueeRepeatLimit="marquee_forever"
                        android:padding="10dp"
                        android:singleLine="true"
                        android:text="Spa tipe 1"
                        android:textColor="@color/white"
                        tools:targetApi="lollipop" />

            </RelativeLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
            android:id="@+id/cardku2"
            android:layout_margin="20dp"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:layout_marginBottom="1dp">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

            <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <ImageView
                        android:src="@drawable/spa1"
                        android:id="@+id/articleImage2"
                        android:layout_width="match_parent"
                        android:layout_height="250dp"
                        android:adjustViewBounds="false"
                        android:background="@color/darkGray"
                        android:cropToPadding="true"
                        android:padding="0dp"
                        android:paddingBottom="0dp"
                        android:scaleType="centerCrop" />

                <TextView
                        android:id="@+id/articleName2"
                        style="@android:style/TextAppearance.Medium"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignBottom="@+id/articleImage2"
                        android:layout_alignParentStart="true"
                        android:background="@drawable/gradient_title"
                        android:elevation="3dp"
                        android:ellipsize="marquee"
                        android:focusable="true"
                        android:marqueeRepeatLimit="marquee_forever"
                        android:padding="10dp"
                        android:singleLine="true"
                        android:text="Spa tipe 2"
                        android:textColor="@color/white"
                        tools:targetApi="lollipop" />

            </RelativeLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>


</LinearLayout>

