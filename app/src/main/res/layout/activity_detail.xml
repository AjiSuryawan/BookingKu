<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#ededed"
                tools:context=".Activity.Detail.DetailActivity">
    
    <android.support.v7.widget.CardView
            android:id="@+id/cardView"
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize"
            android:layout_alignParentTop="true"
            app:cardBackgroundColor="@android:color/transparent">
        
        <include
                android:id="@+id/toolbar"
                layout="@layout/toolbar"/>
    </android.support.v7.widget.CardView>
    
    <FrameLayout
            android:id="@+id/relative_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/bookNowBtn"
            android:layout_below="@id/cardView">
        
        <ScrollView
                android:id="@+id/scrolldown"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            
            <LinearLayout
                    android:id="@+id/linear_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                
                <ImageView
                        android:id="@+id/imageview_product"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:maxHeight="750dp"
                        android:background="@color/grey"
                        android:src="@color/black"/>
                
                
                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                    
                    <android.support.v7.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            app:cardBackgroundColor="@android:color/white"
                            app:cardCornerRadius="4dp"
                            app:cardElevation="3dp"
                            app:contentPadding="5dp">
                        
                        <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">
                            
                            <TextView
                                    android:id="@+id/name_product_text"
                                    style="@style/TextAppearance.AppCompat.Small"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentTop="true"
                                    android:layout_marginLeft="10dp"
                                    android:layout_marginStart="10dp"
                                    android:layout_marginTop="10dp"
                                    android:layout_marginBottom="5dp"
                                    android:text="Name"
                                    android:textColor="@color/ungu"
                                    android:textStyle="bold"/>
                            
                            <TextView
                                    android:id="@+id/name_product"
                                    style="@style/TextAppearance.AppCompat.Small"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:paddingTop="5dp"
                                    android:paddingStart="10dp"
                                    android:paddingEnd="10dp"
                                    android:paddingBottom="10dp"/>
                        
                        </LinearLayout>
                    </android.support.v7.widget.CardView>
                    
                    <android.support.v7.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            app:cardBackgroundColor="@android:color/white"
                            app:cardCornerRadius="4dp"
                            app:cardElevation="3dp"
                            app:contentPadding="5dp">
                        
                        <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">
                            
                            <TextView
                                    android:id="@+id/description_product_text"
                                    style="@style/TextAppearance.AppCompat.Small"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentTop="true"
                                    android:layout_marginLeft="10dp"
                                    android:layout_marginStart="10dp"
                                    android:layout_marginTop="10dp"
                                    android:layout_marginBottom="5dp"
                                    android:text="Description"
                                    android:textColor="@color/ungu"
                                    android:textStyle="bold"/>
                            
                            <TextView
                                    android:id="@+id/description_product"
                                    style="@style/TextAppearance.AppCompat.Small"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:paddingTop="5dp"
                                    android:paddingStart="10dp"
                                    android:paddingEnd="10dp"
                                    android:paddingBottom="10dp"/>
                        
                        </LinearLayout>
                    </android.support.v7.widget.CardView>
                    
                    <android.support.v7.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            app:cardBackgroundColor="@android:color/white"
                            app:cardCornerRadius="4dp"
                            app:cardElevation="3dp"
                            app:contentPadding="5dp">
                        
                        <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">
                            
                            <TextView
                                    style="@style/TextAppearance.AppCompat.Small"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentTop="true"
                                    android:layout_marginLeft="10dp"
                                    android:layout_marginStart="10dp"
                                    android:layout_marginTop="10dp"
                                    android:layout_marginBottom="5dp"
                                    android:text="Note"
                                    android:textColor="@color/ungu"
                                    android:textStyle="bold"/>
                            
                            <TextView
                                    android:id="@+id/txtnote"
                                    style="@style/TextAppearance.AppCompat.Small"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:paddingTop="5dp"
                                    android:paddingStart="10dp"
                                    android:paddingEnd="10dp"
                                    android:paddingBottom="10dp"
                                    android:textStyle="bold"/>
                        
                        </LinearLayout>
                    </android.support.v7.widget.CardView>
                    
                    <android.support.v7.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            app:cardBackgroundColor="@android:color/white"
                            app:cardCornerRadius="4dp"
                            app:cardElevation="3dp"
                            app:contentPadding="5dp">
                        
                        <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:paddingBottom="10dp">
                            
                            <TextView
                                    android:id="@+id/price_product_text"
                                    style="@style/TextAppearance.AppCompat.Small"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentTop="true"
                                    android:layout_marginLeft="10dp"
                                    android:layout_marginStart="10dp"
                                    android:layout_marginTop="10dp"
                                    android:layout_marginBottom="5dp"
                                    android:text="Price"
                                    android:textColor="@color/ungu"
                                    android:textStyle="bold"/>
                            
                            <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">
                                
                                <TextView
                                        android:id="@+id/price_product"
                                        style="@style/TextAppearance.AppCompat.Small"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginEnd="10dp"
                                        android:layout_marginStart="10dp"/>
                                
                                <TextView
                                        android:id="@+id/calculated_price_product"
                                        style="@style/TextAppearance.AppCompat.Small"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginEnd="10dp"
                                        android:textStyle="bold"
                                        android:fontFamily="@font/lucon"
                                        android:textColor="@color/colorAccent"/>
                                
                                <TextView
                                        android:id="@+id/diskon_product"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:gravity="right"
                                        android:paddingEnd="10dp"
                                        android:textStyle="bold"
                                        android:textColor="@color/colorPrimary"/>
                            </LinearLayout>
                        </LinearLayout>
                    </android.support.v7.widget.CardView>
                    
                    <android.support.v7.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="10dp"
                            android:visibility="gone"
                            app:cardCornerRadius="0dp"
                            app:cardUseCompatPadding="true">
                        
                        <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:translationY="0dp">
                            
                            <TextView
                                    android:id="@+id/available_product_text"
                                    style="@style/TextAppearance.AppCompat.Small"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentTop="true"
                                    android:layout_margin="10dp"
                                    android:text="Available"
                                    android:textColor="#FF0000"
                                    android:textStyle="bold"/>
                            
                            <TextView
                                    android:id="@+id/available_product"
                                    style="@style/TextAppearance.AppCompat.Small"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:padding="10dp"
                                    android:text="available"/>
                        
                        </LinearLayout>
                    </android.support.v7.widget.CardView>
                </LinearLayout>
            
            
            </LinearLayout>
        </ScrollView>
    </FrameLayout>
    <Button
            android:id="@+id/bookNowBtn"
            android:layout_width="match_parent"
            android:layout_height="43dp"
            android:layout_alignParentBottom="true"
            android:background="@drawable/btn_grey_state"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="20dp"
            android:text="BOOK NOW"
            android:textColor="@color/colorPrimary"/>
</RelativeLayout>